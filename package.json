    "@ton/ton": "^13.11.2",
    "@tonconnect/sdk": "^3.0.0-beta.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.19.2",
    "moment-timezone": "^0.5.45",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.61.0",
    "prisma": "^5.17.0",
    "qrcode": "^1.5.1",
    "redis": "^4.6.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
